{
  "name": "scpterminal",
  "version": "0.0.1",
  "description": "an scp terminal made in electron",
  "author": "mellobacon <>",
  "main": "dist/main.js",
  "files": [
    "dist/**/**"
  ],
  "scripts": {
    "build": "tsc && copyfiles -f src/pages/*.html dist/pages && copyfiles -f src/components/styles/*.css dist/components/styles/ && copyfiles -f src/components/images/*.png dist/components/images && copyfiles -f src/icon.png dist/",
    "dist": "electron-builder",
    "postinstall": "husky install",
    "start": "yarn build && electron ."
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "axios": "^0.24.0",
    "cheerio": "^1.0.0-rc.10",
    "copyfiles": "^2.4.1",
    "jquery": "^3.6.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jquery": "^3.5.6",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "husky": "^7.0.4",
    "lint-staged": ">=10",
    "prettier": "2.5.0",
    "ts-loader": "^9.2.2",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  },
  "build": {
    "appId": "com.scpterminal",
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "icon": "dist/icon.png",
    "files": [
      "dist/**/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "dist",
      "output": "release"
    }
  }
}
